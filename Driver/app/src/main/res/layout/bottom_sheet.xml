<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/bottom_sheet"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="#ffffff"
	android:orientation="vertical"
	android:padding="16dp"
	app:behavior_hideable="false"
	app:behavior_peekHeight="90dp"
	app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<LinearLayout
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="5"
			android:orientation="vertical">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Más opciones"
				android:textColor="#000000"
				android:textSize="24sp"
				android:textStyle="bold"
				android:id="@+id/bottomsheetTitle"
				android:padding="8dp"/>

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="8dp"
				android:orientation="horizontal">

				<android.support.v7.widget.AppCompatRatingBar
					style="@style/Base.Widget.AppCompat.RatingBar.Small"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:numStars="5"
					android:rating="4"
					android:layout_margin="8dp"/>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="4.7"/>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="8dp"
					android:text="(51)"/>

			</LinearLayout>

			<View
				android:layout_width="match_parent"
				android:layout_height="0.5dp"
				android:layout_marginTop="12dp"
				android:layout_marginBottom="12dp"
				android:background="#5d5d5d"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:drawableLeft="@drawable/baseline_help_outline_black_24"
				android:drawablePadding="16dp"
				android:text="Pedir ayuda!"
				android:textColor="#5692F5"
				android:padding="8dp"
				android:id="@+id/bottomsheetHelp"/>

			<View
				android:layout_width="match_parent"
				android:layout_height="0.5dp"
				android:layout_marginTop="12dp"
				android:layout_marginBottom="12dp"
				android:background="#5d5d5d"/>

		</LinearLayout>

	</LinearLayout>

	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:drawableLeft="@drawable/round_money_off_black_24"
		android:drawablePadding="16dp"
		android:text="Liquidación"
		android:textColor="#000000"
		android:id="@+id/bottomsheetLiquidacion"
		android:padding="8dp"/>

	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:drawableLeft="@drawable/round_attach_money_black_24"
		android:drawablePadding="16dp"
		android:text="Mis ganancias"
		android:textColor="#000000"
		android:id="@+id/bottomsheetGanancias"
		android:padding="8dp"/>

	<Button
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="16dp"
		android:background="#369990"
		android:text="CERRAR SESIÓN"
		android:textColor="#FFFFFF"
		android:layout_marginBottom="54dp"
		android:id="@+id/bottomsheetLogout"
		android:layout_marginLeft="8dp"
		android:layout_marginRight="8dp"/>

</LinearLayout>

