<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:layout_margin="16dp"
	android:elevation="2dp"
	android:background="#EDEDED"
	android:layout_marginBottom="55dp">

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="#FFFFFF">

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center_vertical">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Estado de orden"
				android:layout_margin="8dp"/>

			<EditText
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Consultando..."
				android:id="@+id/dashboardOrderStatus"
				android:textColor="#FA3D32"/>

			<Spinner
				android:id="@+id/orderStatus_rowSpinner"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:visibility="gone"/>

		</LinearLayout>

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center_vertical">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Cliente"
				android:layout_margin="8dp"/>

			<TextView
				android:textIsSelectable="true"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="Consultando..."
				android:layout_margin="0dp"
				android:id="@+id/dashboardAddressA"
				android:textColor="#117D00"
				android:textStyle="bold"
				android:textSize="18sp"/>

		</LinearLayout>

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center_vertical">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Tel.:"
				android:layout_margin="8dp"/>

			<TextView
				android:textIsSelectable="true"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="75758989"
				android:layout_margin="0dp"
				android:id="@+id/CelulardashboardAddressA"
				android:textColor="#3F6A78"
				android:textStyle="bold"
				android:textSize="16sp"/>

			<Button
				android:layout_width="wrap_content"
				style="?android:attr/buttonBarButtonStyle"
				android:layout_height="wrap_content"
				android:text="Llamar a Cliente"
				android:id="@+id/llamarorderpoolrowButton1"
				android:textColor="#85089E"
				android:maxEms="8"
				android:textSize="12sp"/>

			<Button
				android:layout_width="wrap_content"
				style="?android:attr/buttonBarButtonStyle"
				android:layout_height="wrap_content"
				android:text="Whatsapp a Cliente"
				android:textColor="#00FF69"
				android:id="@+id/whatsapporderrowButton1"
				android:maxEms="8"
				android:textSize="12sp"/>

		</LinearLayout>

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center_vertical">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Instrucciones:"
				android:layout_margin="8dp"/>

			<EditText
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_margin="0dp"
				android:id="@+id/instruccionesEd"
				android:maxEms="10"
				android:textColor="#E316C3"
				android:textSize="16sp"/>

		</LinearLayout>

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center_vertical">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Destino"
				android:layout_margin="8dp"/>

			<EditText
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_margin="0dp"
				android:id="@+id/dashboardAddressB"
				android:textColor="#00676E"
				android:textSize="18sp"
				android:hint="Escribir dirección, casa, y municipio."
				android:textStyle="bold"
				android:maxEms="10"/>

			<Button
				android:layout_width="wrap_content"
				style="?android:attr/buttonStyleSmall"
				android:layout_height="wrap_content"
				android:text="Buscar en mapa"
				android:layout_marginRight="8dp"
				android:id="@+id/orderrowButtonDestino"
				android:textSize="12sp"/>

		</LinearLayout>

	</LinearLayout>

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/orderRowLayoutToCollapse"
		android:visibility="visible">

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center_vertical"
			android:visibility="gone">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Código de orden:"
				android:layout_margin="8dp"/>

			<EditText
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="Consultando..."
				android:id="@+id/dashboarOrderTitle"
				android:textSize="14sp"/>

		</LinearLayout>

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center_vertical">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Tienda:"
				android:layout_margin="8dp"/>

			<EditText
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:id="@+id/empresaEd"
				android:textSize="14sp"/>

		</LinearLayout>

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center_vertical">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Contactar a la tienda:"
				android:layout_margin="8dp"
				android:maxEms="5"
				android:textStyle="bold"/>

			<EditText
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/empresaEdPhone"
				android:textSize="14sp"
				android:maxEms="4"/>

			<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Mensaje A Tienda"
				android:id="@+id/tiendaWhatsapp"
				android:textSize="12sp"
				android:maxEms="4"/>

			<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Llamar a Tienda"
				android:id="@+id/tiendaLlamar"
				android:textSize="12sp"
				android:maxEms="4"/>

		</LinearLayout>

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center_vertical"
			android:layout_marginBottom="8dp">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Dirección Tienda"
				android:layout_margin="8dp"/>

			<EditText
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:id="@+id/direccionEmpresaEd"
				android:textSize="14sp"/>

		</LinearLayout>

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center_vertical"
			android:visibility="gone">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Costo del producto $"
				android:layout_margin="8dp"/>

			<EditText
				android:inputType="numberDecimal"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text=""
				android:id="@+id/costodelproducto"
				android:textColor="#202020"
				android:hint="Obligatorio"
				android:textStyle="bold"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Envío $"
				android:layout_margin="8dp"/>

			<EditText
				android:inputType="numberDecimal"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text=""
				android:id="@+id/costodelenvio"
				android:textColor="#3E3E3E"
				android:hint="Obligatorio"
				android:textStyle="bold"/>

		</LinearLayout>

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="left|center_vertical">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="TOTAL $"
				android:textColor="#000000"
				android:layout_margin="8dp"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="0"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:textStyle="bold"
				android:textColor="#7B0D00"
				android:id="@+id/totalCostSum"
				android:textSize="47sp"/>

		</LinearLayout>

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center_vertical"
			android:visibility="gone">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Distancia"
				android:layout_margin="8dp"/>

			<EditText
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="Consultando..."
				android:id="@+id/dashboardDistance"/>

		</LinearLayout>

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center_vertical"
			android:visibility="gone">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Fecha y hora de entrega"
				android:layout_margin="8dp"/>

			<EditText
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="Consultando..."
				android:id="@+id/dashboardDateEta"/>

		</LinearLayout>

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center_vertical"
			android:visibility="gone">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Recoger dinero en"
				android:layout_margin="8dp"/>

			<EditText
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Consultando..."
				android:id="@+id/dashboardWhereGetMoney"
				android:layout_margin="8dp"/>

		</LinearLayout>

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<Button
				android:layout_width="wrap_content"
				style="?android:attr/buttonStyleSmall"
				android:layout_height="wrap_content"
				android:text="Paquete recibido"
				android:id="@+id/orderrowButtonRecibido"
				android:visibility="gone"/>

			<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Entregar paquete"
				android:id="@+id/orderrowButtonEntregado"/>

		</LinearLayout>

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="left"
			android:layout_marginTop="8dp">

			<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Mapa de partida"
				android:layout_marginRight="8dp"
				android:id="@+id/orderrowButtonPartida"
				android:visibility="gone"/>

			<ScrollView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content">

			</ScrollView>

		</LinearLayout>

	</LinearLayout>

	<View
		android:background="?android:attr/dividerVertical"
		android:layout_width="match_parent"
		android:layout_height="1dp"/>

	<ImageView
		android:src="@drawable/baseline_expand_more_black_24"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/ExpandorderrowImageView1"
		android:padding="4dp"
		android:visibility="gone"/>

</LinearLayout>

