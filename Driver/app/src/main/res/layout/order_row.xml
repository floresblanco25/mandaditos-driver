<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:layout_margin="16dp"
	android:elevation="8dp"
	android:background="#EDEDED"
	android:layout_marginBottom="55dp">

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center_vertical">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="CÃ³digo de orden:"/>

		<EditText
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="Consultando..."
			android:id="@+id/dashboarOrderTitle"
			style="@style/info"
			android:textColor="#606060"/>

	</LinearLayout>

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/orderRowLayoutToCollapse"
		android:visibility="visible">

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center_vertical">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Estado de orden"
				style="@style/info"
				android:layout_margin="8dp"/>

			<EditText
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Consultando..."
				style="@style/info"
				android:layout_margin="8dp"
				android:id="@+id/dashboardOrderStatus"/>

		</LinearLayout>

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center_vertical">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Cliente"
				style="@style/info"
				android:layout_margin="8dp"/>

			<TextView
				android:textIsSelectable="true"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="Consultando..."
				style="@style/info"
				android:layout_margin="0dp"
				android:id="@+id/dashboardAddressA"
				android:textColor="#117D00"
				android:textStyle="bold"/>

		</LinearLayout>
		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center_vertical">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Tel.:"
				style="@style/info"
				android:layout_margin="8dp"/>

			<TextView
				android:textIsSelectable="true"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="75758989"
				style="@style/info"
				android:layout_margin="0dp"
				android:id="@+id/CelulardashboardAddressA"
				android:textColor="#3F6A78"
				android:textStyle="bold"
				android:textSize="16sp"/>

			<Button
				android:layout_width="wrap_content"
				style="?android:attr/buttonBarButtonStyle"
				android:layout_height="wrap_content"
				android:text="Llamar"
				android:id="@+id/llamarorderpoolrowButton1"
				android:textColor="#85089E"/>

		</LinearLayout>

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center_vertical">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Destino"
				style="@style/info"
				android:layout_margin="8dp"/>

			<EditText
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="Consultando..."
				style="@style/info"
				android:layout_margin="0dp"
				android:id="@+id/dashboardAddressB"/>

		</LinearLayout>

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center_vertical"
			android:visibility="gone">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Distancia"
				style="@style/info"
				android:layout_margin="8dp"/>

			<EditText
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="Consultando..."
				style="@style/info"
				android:id="@+id/dashboardDistance"/>

		</LinearLayout>

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center_vertical"
			android:visibility="gone">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Fecha y hora de entrega"
				style="@style/info"
				android:layout_margin="8dp"/>

			<EditText
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="Consultando..."
				style="@style/info"
				android:id="@+id/dashboardDateEta"/>

		</LinearLayout>

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center_vertical"
			android:visibility="gone">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Recoger dinero en"
				style="@style/info"
				android:layout_margin="8dp"/>

			<EditText
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Consultando..."
				style="@style/info"
				android:id="@+id/dashboardWhereGetMoney"
				android:layout_margin="8dp"/>

		</LinearLayout>

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center_vertical">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Costo total $"
				style="@style/info"
				android:layout_margin="8dp"
				android:textSize="15sp"/>

			<EditText
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="Consultando..."
				style="@style/title"
				android:id="@+id/dashboardTotalCost"
				android:textColor="#A00900"/>

		</LinearLayout>

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="left"
			android:layout_marginTop="8dp">

			<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Mapa de partida"
				android:layout_marginRight="8dp"
				android:id="@+id/orderrowButtonPartida"
				android:visibility="gone"/>

			<Button
				android:layout_width="wrap_content"
				style="?android:attr/buttonStyleSmall"
				android:layout_height="wrap_content"
				android:text="Mapas"
				android:layout_marginRight="8dp"
				android:id="@+id/orderrowButtonDestino"/>

			<LinearLayout
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

				<Button
					android:layout_width="wrap_content"
					style="?android:attr/buttonStyleSmall"
					android:layout_height="wrap_content"
					android:text="Paquete recibido"
					android:id="@+id/orderrowButtonRecibido"
					android:visibility="gone"/>

				<Button
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Entregar paquete"
					android:id="@+id/orderrowButtonEntregado"/>

			</LinearLayout>

		</LinearLayout>

	</LinearLayout>

	<View
		android:background="?android:attr/dividerVertical"
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:layout_marginTop="16dp"/>

</LinearLayout>

